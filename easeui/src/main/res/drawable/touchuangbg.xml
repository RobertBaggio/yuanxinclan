<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/recall_white_5bg" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="0px"
        android:color="@color/recall_white_5bg" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:radius="40dp"/>
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="5dp"
        android:left="13dp"
        android:right="13dp"
        android:top="5dp" />

</shape>
