<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/ccsansan" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="1px"
        android:color="@color/gray_b7" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:radius="1050dp"/>
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

</shape>
