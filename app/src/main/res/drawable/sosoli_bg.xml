<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/fyifyi" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="2px"
        android:color="@color/white" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:radius="4dp"/>
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

</shape>
