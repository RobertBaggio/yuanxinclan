<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_gxname"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/login_black"
            android:lineSpacingExtra="3dp"
            android:text="薄利多销哦"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_gongxuaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/danggryyuan"
                android:textSize="12dp"
                android:text="东莞"/>

            <TextView
                android:id="@+id/item_gongxutype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/danggryyuan"
                android:text="需求"
                android:textSize="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/juline_detailju"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_b7">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
