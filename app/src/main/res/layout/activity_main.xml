<?xml version="1.0" encoding="utf-8"?>

<!--
    * Describe: 主界面
    * Author: xjc
    -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">


    <LinearLayout
        android:id="@+id/lyMeun"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/online_gray_fill_white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/lyMenuHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/mainbottomsele"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMenuHome"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/tabhost_home_shape"/>

            <TextView
                android:id="@+id/shouyete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="首页"
                android:textColor="#575973"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyMenuNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/mainbottomsele"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMenuNews"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/tabhost_news_shape"/>

            <TextView
                android:id="@+id/zixunte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="商机"
                android:textColor="#575973"
                android:textSize="10sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/remenuBusiness"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lyMenuBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgMenuBusinessBg"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/index_publish_bg"
                    android:scaleType="fitCenter"
                    android:layout_centerInParent="true"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="5dip"
                    app:riv_border_color="@color/white"
                    app:riv_mutate_background="true"
                    app:riv_tile_mode="clamp"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/imgMenuBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/index_publish_plus" />

                <TextView
                    android:id="@+id/businessTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="发布"
                    android:textColor="#575973"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvBusinessNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lyMenuBusiness"
                android:layout_marginBottom="-8dp"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/lyMenuBusiness"
                android:background="@drawable/red_point_drawable"
                android:contentDescription="@null"
                android:gravity="center"
                android:minWidth="14dp"
                android:padding="2dp"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/remenuChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mainbottomsele"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lyMenuChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMenuChat"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/tabhost_chat_shape"/>

                <TextView
                    android:id="@+id/qiliaote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="企聊"
                    android:textColor="#575973"
                    android:textSize="10sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvChatNum"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:text="8"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="10sp"
                android:background="@drawable/angred_shi_yuan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lyMenuChat"
                android:layout_marginBottom="-8dp"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/lyMenuChat"
                android:background="@drawable/red_point_drawable"
                android:contentDescription="@null"
                android:gravity="center"
                android:minWidth="14dp"
                android:padding="2dp"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lyMenuCenter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/mainbottomsele"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMenuCenter"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/tabhost_center_shape"/>

            <TextView
                android:id="@+id/wodete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="我的"
                android:textColor="#575973"
                android:textSize="10sp"/>
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lyMeun"/>
</RelativeLayout>

