<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_company_info_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/business_district_title">

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/activity_company_member_add_head_image_layout">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ease_mm_title_back"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加成员"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/activity_company_member_add_right_layout"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:background="@drawable/border_grey">

        <LinearLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用  户  名"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText

                android:id="@+id/activity_company_member_add_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"
                android:hint="请输入姓名"

                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手        机"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:id="@+id/activity_company_member_add_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"
                android:maxLength="11"
                android:inputType="number"
                android:digits="0123456789"
                android:hint="请输入11位手机号码"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="给予职务"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText

                android:textSize="16sp"
                android:id="@+id/activity_company_member_add_position"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入您的职位"
                android:textColor="@color/common_register_black"
                />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/activity_company_member_add_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/business_district_title"/>

</LinearLayout>
