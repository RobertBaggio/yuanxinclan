<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >
    //android:paddingLeft="12dp"
    //android:paddingRight="12dp"

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_gank_layout"

        >

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_gank_image"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/by"/>

        <LinearLayout
            android:layout_toRightOf="@+id/item_gank_image"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/item_gank_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们都是好朋友,我们都是好朋友我们都是好朋友我们都是好朋友我们都是好朋友我们都是好朋友我们都是好朋友"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="15dp"
                android:textColor="@color/register_grey"/>
            <!--<TextView-->
            <!--android:id="@+id/item_gank_type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Android"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="#323738"-->
            <!--/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                >

                <TextView

                    android:id="@+id/item_gank_who"
                    android:layout_width="50dp"
                    android:layout_height="16dp"
                    android:text="推荐"
                    android:textColor="@color/item_gank_white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@drawable/border_red"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="#aeaeae"
                    android:textSize="11sp"
                    android:id="@+id/item_gank_createdAt"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017年12月"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/item_gank_layout"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/item_gank_item_grey"/>


</RelativeLayout>
