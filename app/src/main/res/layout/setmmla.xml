<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/backacli"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_black"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置支付密码"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/activity_company_info_right_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="@drawable/border_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手    机"
                android:textColor="@color/common_register_black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/line"/>

            <EditText
                android:id="@+id/setzfmm_password_phone_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789"
                android:hint="请输入11位手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/common_register_black"
                android:textSize="16sp"
                android:editable="false"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机认证"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/yzmetregister_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"
                android:inputType="number"
                android:hint="请输入验证码"
                />

            <TextView
                android:id="@+id/getyzm_phone_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/blue"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:textSize="16sp"

                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:textColor="@color/common_register_black"
                android:textSize="16sp"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:inputType="textVisiblePassword"
                android:digits="@string/pwd_limit"
                android:textSize="16sp"
                android:id="@+id/diyicimm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/common_register_black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:visibility="gone"
                android:src="@drawable/register01_look"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <LinearLayout
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:textColor="@color/common_register_black"
                android:textSize="16sp"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:inputType="textVisiblePassword"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="16sp"
                android:id="@+id/diercimm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/common_register_black"
                />



        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:id="@+id/szzfmmbt_register"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/selector_register_green"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginRight="13dp"
        android:paddingBottom="15dp"
        >
    </LinearLayout>
</LinearLayout>
