<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/login_red">

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/activity_exchange_phone_left_layout">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ease_mm_title_back"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/activity_exchange_phone_right_layout"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center_vertical|end"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_find_password_text"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="13dp"
        android:paddingLeft="12dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:background="@drawable/border_grey">

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="手    机"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:digits="0123456789"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="手机认证"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/activity_login_common_register_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"
                android:inputType="number"
                android:hint="请输入验证码"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/activity_login_common_register_send_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:textColor="@color/blue"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:textSize="16sp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:textSize="16sp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:textSize="16sp"
                android:id="@+id/activity_login_common_register_password"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="6-8位数字和英文"
                android:digits="@string/pwd_limit"
                android:textColor="@color/common_register_black"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:src="@drawable/register01_look"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:id="@+id/activity_login_common_register_register"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:enabled="false"
        android:background="@drawable/border_grey_2_0"/>

</LinearLayout>
