<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_new_my_bargin_layout"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/item_new_my_bargin_name"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业内部经营合同"/>

        <TextView
            android:layout_toLeftOf="@+id/item_new_my_bargin_name"
            android:id="@+id/item_new_my_bargin_time"

            android:layout_alignParentRight="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-5-12"
            android:maxEms="10"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"/>


</LinearLayout>
