<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_fa">

    <RelativeLayout
        android:id="@+id/activity_choose_crowd_head_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/fair_activity_head">

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/activity_crowd_funding_introduce_head_image_layout">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ease_mm_title_back"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布人群"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/activity_crowd_funding_introduce_right_layout"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingRight="12dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_choose_crowd_all_text"
        android:layout_below="@+id/activity_choose_crowd_head_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="全部"
        android:textColor="@color/common_register_black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="12dp"/>

    <TextView
        android:id="@+id/activity_choose_crowd_line_one"
        android:layout_below="@+id/activity_choose_crowd_all_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"/>

    <TextView
        android:id="@+id/activity_choose_crowd_business_text"
        android:layout_below="@+id/activity_choose_crowd_line_one"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="商圈"
        android:textColor="@color/common_register_black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="12dp"/>

    <TextView
        android:id="@+id/activity_choose_crowd_line_two"
        android:layout_below="@+id/activity_choose_crowd_business_text"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"/>


</RelativeLayout>
