<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_b7"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_news_chat_base_web_head_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_below="@+id/activity_news_chat_base_web_buttom_input_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/activity_yuan_xin_crowd_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <ImageView
                android:id="@+id/activity_yuan_xin_crowd_left_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/back"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_yuan_xin_crowd_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_below="@+id/zixunshouchangimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textSize="16dp"
                android:textColor="@color/search_black"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/zixunshouchangimage"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:visibility="gone"
            android:src="@drawable/shoppingw"
            android:layout_marginEnd="45dp"/>
        <ImageView
            android:id="@+id/zixunfenxiangimage"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/news_icon_share"
            android:layout_alignTop="@+id/zixunshouchangimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:visibility="gone"
            android:layout_marginEnd="12dp"/>
        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="@drawable/round_gry"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/activity_yuan_xin_crowd_left_layout"
            android:layout_toEndOf="@+id/activity_yuan_xin_crowd_left_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/seass"
                android:layout_marginLeft="8dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView4"/>
            <EditText
                android:id="@+id/activi_middle_editextt"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:hint=""
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@color/search_bg"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/activity_yuan_xin_crowd_middle_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/seass"
            android:textColor="@color/white"
            android:background="@drawable/yuanjiao_white"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:textSize="18sp"/>

    </RelativeLayout>
    <TextView
        android:layout_below="@+id/activity_news_chat_base_web_head_layout"
        android:id="@+id/title_layout_no_friends"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="right|top"
        android:background="#E0E0E0"
        android:gravity="center"
        android:text="没有匹配的联系人"
        android:textColor="#454545"
        android:visibility="gone"
        />
        <ListView
            android:id="@+id/country_lvcountry"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_below="@+id/title_layout_no_friends"
            android:divider="@null"/>




</LinearLayout>
