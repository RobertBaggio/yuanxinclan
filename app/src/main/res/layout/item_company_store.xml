<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/item_company_store_store"
            android:textSize="16sp"
            android:textColor="@color/login_black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="淘宝"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/item_shopping_cart_test_check_box_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            >

            <ImageView
                android:id="@+id/item_shopping_cart_check_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_unselected"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_cc"
        />

</LinearLayout>
