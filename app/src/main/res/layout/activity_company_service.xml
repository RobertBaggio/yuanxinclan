<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/activity_company_service_head_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/company_info_blue">

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/activity_company_service_left_layout">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ease_mm_title_back"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业服务"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/activity_company_service_right_layout"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_company_service_line_one"
        android:layout_below="@+id/activity_company_service_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:paddingLeft="12dp"
        android:text="为了更专业严谨地app开发流程，为了更专业严谨地app开发流程为了更专业严谨地app开发流程"
        android:gravity="center"/>


    <RelativeLayout
        android:id="@+id/activity_company_service_people_layout"
        android:layout_below="@+id/activity_company_service_line_one"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/activity_company_service_people_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系人"
            android:textSize="16sp"
            android:textColor="@color/activity_five_black"/>

        <EditText
            android:id="@+id/activity_company_service_people_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="13sp"
            android:hint="请输入姓名"
            android:textColor="@color/activity_company_info_grey"
            android:layout_toRightOf="@+id/activity_company_service_people_text"
            android:gravity="end|center_vertical"/>

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/activity_company_service_people_layout"
        android:id="@+id/activity_company_service_line_two"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"/>

    <RelativeLayout
        android:layout_below="@+id/activity_company_service_line_two"
        android:id="@+id/activity_company_service_phone_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/activity_company_service_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textSize="16sp"
            android:textColor="@color/activity_five_black"/>

        <EditText
            android:id="@+id/activity_company_service_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="13sp"
            android:hint="请输入联系方式"
            android:inputType="number"
            android:digits="0123456789"
            android:textColor="@color/activity_company_info_grey"
            android:layout_toRightOf="@+id/activity_company_service_phone_text"
            android:gravity="end|center_vertical"/>

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/activity_company_service_phone_layout"
        android:id="@+id/activity_company_service_line_three"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"/>


    <RelativeLayout
        android:id="@+id/activity_company_service_area_layout"
        android:layout_below="@+id/activity_company_service_line_three"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/activity_company_service_area_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="服务区域"
            android:textSize="16sp"
            android:textColor="@color/activity_five_black"/>

        <TextView
            android:id="@+id/activity_company_service_area_text_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/activity_company_service_area_text"
            android:layout_toLeftOf="@+id/activity_company_service_area_image"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:textSize="13sp"
            android:textColor="@color/activity_company_info_grey"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/activity_company_service_area_image"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>

        <!--<EditText-->
        <!--android:id="@+id/activity_company_info_company_introduce_edit"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->

        <!--android:background="@null"-->
        <!--android:textSize="14sp"-->
        <!--android:textColor="@color/text_color_grey"-->
        <!--android:layout_toRightOf="@+id/activity_company_info_company_introduce"/>-->

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/activity_company_service_area_layout"
        android:id="@+id/activity_company_service_line_four"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"/>

    <RelativeLayout
        android:layout_below="@+id/activity_company_service_line_four"
        android:id="@+id/activity_company_service_service_type_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/activity_company_service_service_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="服务类型"
            android:textSize="16sp"
            android:textColor="@color/activity_five_black"/>

        <TextView
            android:id="@+id/activity_company_service_service_type_text_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/activity_company_service_service_type_text"
            android:layout_toLeftOf="@+id/activity_company_service_service_type_image"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:textSize="13sp"
            android:textColor="@color/activity_company_info_grey"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/activity_company_service_service_type_image"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>

        <!--<EditText-->
        <!--android:id="@+id/activity_company_info_company_introduce_edit"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->

        <!--android:background="@null"-->
        <!--android:textSize="14sp"-->
        <!--android:textColor="@color/text_color_grey"-->
        <!--android:layout_toRightOf="@+id/activity_company_info_company_introduce"/>-->

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/activity_company_service_service_type_layout"
        android:id="@+id/activity_company_service_service_line_five"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"/>

    <TextView
        android:layout_below="@+id/activity_company_service_service_line_five"
        android:id="@+id/activity_company_service_service_line_six"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>

    <TextView
        android:layout_below="@+id/activity_company_service_service_line_six"
        android:id="@+id/activity_company_service_service_line_seven"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_white"/>


    <EditText
        android:layout_below="@+id/activity_company_service_service_line_seven"
        android:id="@+id/activity_company_service_service_message_edit"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:hint="备注信息"
        android:textSize="16sp"
        android:textColor="@color/activity_five_black"
        android:gravity="left"
        android:background="@color/activity_company_info_line"
        />

    <Button
        android:id="@+id/activity_company_service_service_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="提交认证"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/company_info_blue"
        android:gravity="center"
        />

</RelativeLayout>
