<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ifshoulinear"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="@color/bg_simple"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/leftli"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="@color/activity_company_info_line"
            android:gravity="center">

            <CheckBox
                android:id="@+id/onebid_checkbox"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_status"
                android:button="@null"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/bnamete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/buy_black"
            android:textSize="14dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="left"
            android:enabled="false"
            android:text="bunisssnamme"/>

    </LinearLayout>


    <TextView
        android:id="@+id/iflishow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:visibility="gone"
        android:background="@color/divider_color"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_shopping_cart_test_check_box_layout"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:background="@color/activity_company_info_line"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_shopping_cart_check_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_unselected"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_shopping_cart_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/by"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/item_shopping_cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="¥0"
                    android:textColor="@color/buy_black"
                    />

                <TextView
                    android:id="@+id/item_shopping_cart_subtract"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/item_shopping_cart_edit"
                    android:background="@drawable/selector_subtract"/>

                <TextView
                    android:id="@+id/item_shopping_cart_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/item_shopping_cart_add"
                    android:background="@drawable/mark_btn_box_nomal"
                    android:gravity="center"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/item_shopping_cart_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_add"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/item_shopping_cart_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品"
                    android:textColor="@color/buy_black"
                    android:textSize="13sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_shopping_cart_choose_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格："
                    android:textColor="@color/buy_black"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/item_shopping_cart_choose_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/item_shopping_cart_choose_one"
                    android:text="颜色："
                    android:textColor="@color/buy_black"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/divider_color"/>

</LinearLayout>
