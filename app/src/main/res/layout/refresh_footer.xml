<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pull_to_refresh_footer"
                android:layout_width="fill_parent"
                android:background="@color/bg_simple"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/pull_to_load_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="70dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:src="@drawable/ic_pulltorefresh_arrow_up"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/pull_to_load_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textColor="@color/bg_top_fresh"
            android:text="@string/pull_to_refresh_footer_pull_label"
            android:textSize="13dp"/>

    <ProgressBar
            android:id="@+id/pull_to_load_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@id/pull_to_load_text"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/bg_loading_progress"
            android:visibility="gone"/>

</RelativeLayout>
