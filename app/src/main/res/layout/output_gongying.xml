<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/activity_news_chat_base_web_head_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/businesstop"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/rlLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="9dp"
            android:paddingRight="13dp">


            <ImageView
                android:id="@+id/activity_yuan_xin_crowd_left_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ease_mm_title_back"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/zixunshouchangimage"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/news_icon_collect"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:visibility="invisible"
            android:layout_marginEnd="45dp"/>
        <ImageView
            android:id="@+id/zixunfenxiangimage"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/news_icon_share"
            android:layout_alignTop="@+id/zixunshouchangimage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:visibility="gone"
            android:layout_marginEnd="12dp"/>
        <TextView
            android:id="@+id/activity_yuan_xin_crowd_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="发布供应信息"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignTop="@+id/zixunshouchangimage"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_company_info_line"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="供应物资"
                    android:textSize="15dp"
                    android:textColor="@color/silingsiling"
                    android:layout_marginLeft="11dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/ok2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_white"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/gytitleet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="14dp"
                    android:hint="请输入所提供的具体物资"
                    android:textColor="@color/activity_company_info_grey"
                    android:layout_marginLeft="11dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_white"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/personal_center2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="数量"
                    android:textColor="@color/login_black"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/bi_tian"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">
                    <EditText
                        android:id="@+id/gynumberet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:layout_marginRight="10dp"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/activity_company_info_grey"
                        android:hint="0000"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:src="@drawable/personal_center_icon_enter_black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_white"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/qian2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="预算金额"
                    android:textColor="@color/login_black"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">
                    <EditText
                        android:id="@+id/gymoneyet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:inputType="number"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/activity_company_info_grey"
                        android:hint="请输入金额"/>
                    <TextView
                        android:id="@+id/xqzhouqie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/activity_company_info_grey"
                        android:hint="元"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:src="@drawable/personal_center_icon_enter_black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_white"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/zhouqi2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="交付周期"
                    android:textColor="@color/login_black"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">
                    <EditText
                        android:id="@+id/gyzhouqiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:gravity="end|center_vertical"
                        android:inputType="number"
                        android:textColor="@color/activity_company_info_grey"
                        android:hint="请输入交付周期"/>
                    <TextView
                        android:id="@+id/xqzhouqiendet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/activity_company_info_grey"
                        android:hint="天"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:src="@drawable/personal_center_icon_enter_black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_white"></LinearLayout>
            <LinearLayout
                android:id="@+id/gyyxqli"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/riqi2"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="有效日期"
                    android:textColor="@color/login_black"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/bi_tian"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">
                    <TextView
                        android:id="@+id/gyyouxqte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/activity_company_info_grey"
                        android:gravity="end|center_vertical"
                        android:hint="选择日期"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:src="@drawable/personal_center_icon_enter_black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_white"></LinearLayout>
            <LinearLayout
                android:id="@+id/gydiquli"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/diqu2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="交付地区"
                    android:textColor="@color/login_black"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/bi_tian"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">
                    <TextView
                        android:id="@+id/gydiqute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/activity_company_info_grey"
                        android:gravity="end|center_vertical"
                        android:hint="请选择地区"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:src="@drawable/personal_center_icon_enter_black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_white"></LinearLayout>
            <LinearLayout
                android:id="@+id/gyhyli"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/hangye2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="所属行业"
                    android:textColor="@color/login_black"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/bi_tian"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">
                    <TextView
                        android:id="@+id/gyhyte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/activity_company_info_grey"
                        android:gravity="end|center_vertical"
                        android:hint="选择行业"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:src="@drawable/personal_center_icon_enter_black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gray_white"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/activity_company_info_line"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/personal_center2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="供应信息详情"
                    android:textColor="@color/silingsiling"
                    android:textSize="15dp"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/bi_tian"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white">
                <EditText
                    android:id="@+id/gydetailet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入供应物资的具体详情信息"
                    android:layout_margin="12dp"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:background="@color/activity_company_info_line"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/img_icon2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="供应信息图片"
                    android:textColor="@color/silingsiling"
                    android:textSize="15dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:textSize="12sp"
                    android:text="尺寸w:750*h:450单位px"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/gyimage1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"

                    android:src="@drawable/by"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/line"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line"
                    />

                <ImageView
                    android:id="@+id/gyimage2"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"

                    android:src="@drawable/by"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/line"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line"
                    />

                <ImageView
                    android:id="@+id/gyimage3"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"

                    android:src="@drawable/by"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/gyimage4"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"

                    android:src="@drawable/by"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/line"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line"
                    />

                <ImageView
                    android:id="@+id/gyimage5"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"

                    android:src="@drawable/by"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/line"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/line"
                    />

                <ImageView
                    android:id="@+id/gyimage6"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/by"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="*禁止发布广告以及骚扰等垃圾信息。如"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13dp"
                    android:text="收到举报并核实，圆心部落有权永久封号"/>
            </LinearLayout>
            <Button
                android:id="@+id/outputgy_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/xiaojiao_blue_yuan"
                android:text="发布"
                android:textSize="15dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
