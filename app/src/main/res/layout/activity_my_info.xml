<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/businesstop"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_company_info_left_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="9dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ease_mm_title_back"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="个人资料"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/activity_company_info_right_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提交"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_my_info_head_layout"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="13dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/activity_five_black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/activity_my_info_head_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/by"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white_fa"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"

                >

                <TextView
                    android:id="@+id/activity_my_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:textColor="@color/activity_five_black"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/activity_my_info_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"

                android:background="@color/gray_white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >

                <TextView
                    android:id="@+id/activity_my_info_sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/activity_five_black"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/activity_my_info_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/activity_my_info_sex_text"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="请输入性别"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="16sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"

                android:background="@color/gray_white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >

                <TextView
                    android:id="@+id/activity_my_info_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textColor="@color/activity_five_black"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/activity_my_info_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/activity_my_info_phone_text"
                    android:background="@null"
                    android:digits="0123456789"
                    android:gravity="end|center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="numberSigned"
                    android:maxLength="11"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="16sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="@color/gray_white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"

                >

                <TextView
                    android:id="@+id/activity_my_info_area_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所在区域"
                    android:textColor="@color/activity_five_black"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/activity_my_info_area"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:hint="请选择所在区域"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="15sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/activity_my_info_title_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/by"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="扫描上面二维码，加我好友"
                android:textColor="@color/login_black"
                android:textSize="13sp"/>

            <!--<RelativeLayout-->

            <!--android:background="@color/white"-->
            <!--android:paddingLeft="12dp"-->
            <!--android:paddingRight="12dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="49dp"-->
            <!--&gt;-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="申请加入智囊团"-->
            <!--android:layout_centerVertical="true"-->
            <!--/>-->

            <!--</RelativeLayout>-->

        </LinearLayout>
    </ScrollView>


</LinearLayout>
