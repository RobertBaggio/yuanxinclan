<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/centerli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:textSize="15dp"
           android:text="name "
           android:id="@+id/hdqnamete"
           android:textColor="@color/main_grey"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/hdqimage"
                android:layout_width="102dp"
                android:layout_height="68dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_imgge"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_hdqtiemte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxEms="10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="NAME"
                        android:textColor="@color/aliu"
                        android:textSize="12sp"/>

                    <!--<TextView-->
                        <!--android:id="@+id/hdqstatuste"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="13dp"-->
                        <!--android:text="busi"-->
                        <!--android:textColor="@color/aliuqied"-->
                        <!--android:textSize="12sp"/>-->
                    
                    <TextView
                        android:id="@+id/joinBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="报名参加"
                        android:textColor="#38DAB2"
                        android:focusable="false"
                        android:background="@drawable/border_green_join"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/hdqadresste"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="内容"
                    android:textColor="@color/aliu"
                    android:textSize="12sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/aliu"
                        android:text="举办单位："/>

                    <TextView
                        android:id="@+id/hdqepte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/aliu"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:text="tag"
            android:id="@+id/activityTag"
            android:textColor="@color/tag"
            />

</LinearLayout>
</RelativeLayout>
