<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <WebView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/activity_base_web_add_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideOverlay"/>

    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/activity_news_chat_base_web_head_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        >

        <LinearLayout
            android:id="@+id/activity_yuan_xin_crowd_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/activity_yuan_xin_crowd_left_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ease_mm_title_back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_yuan_xin_crowd_middle_text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/login_black"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/activity_t_yuan_xin_crowd_right_image_layout"
            android:gravity="end">

            <ImageView
                android:id="@+id/activity_t_yuan_xin_crowd_right_image"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/news_collecte_nomal"
                android:layout_centerVertical="true"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/business_district_detail_button"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="申请加入"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"
        android:gravity="center"/>

</RelativeLayout>
