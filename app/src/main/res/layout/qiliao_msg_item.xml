<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:melove="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="62dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_business_message_layout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/while_graysolid_bottom"
        android:orientation="horizontal">

        <com.yuanxin.clan.core.util.MLImageView
            android:id="@+id/business_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buy"
            android:scaleType="centerCrop"
            melove:radius="5dp"
            melove:shape_type="rectangle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/business_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="13"
                    android:ellipsize="end"
                    android:text="商圈消息"
                    android:textColor="@color/login_black"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/business_count"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_above="@id/business_title"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/business_title"
                    android:background="@drawable/red_point_drawable"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="08.50"
                    android:textColor="@color/activity_company_info_grey"
                    android:visibility="gone"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:text="待处理"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/business_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无消息"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="暂无消息"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="9dp">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:background="@drawable/personal_center_icon_enter_black"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_b7"/>
</RelativeLayout>
