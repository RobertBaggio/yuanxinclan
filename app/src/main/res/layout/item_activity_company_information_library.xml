<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="15dp"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:orientation="horizontal"
              android:background="@color/white">

    <ImageView
        android:id="@+id/item_company_information_library_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/by"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/item_company_information_library_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卓凡网络科技有限公司"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/item_company_information_library_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初创型企业，主要服务：网站建设，店面推广，店面装修"
            android:textColor="@color/gray"
            android:maxLines="2"
            android:ellipsize="end"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/item_company_information_library_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线沟通"
                android:padding="8dp"
                android:background="@drawable/selector_blue_gray"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
