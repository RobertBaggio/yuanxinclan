<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_fa">
    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/activity_news_chat_base_web_head_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/my_info_green"
        >

        <LinearLayout
            android:id="@+id/activity_yuan_xin_crowd_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/activity_yuan_xin_crowd_left_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ease_mm_title_back"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_yuan_xin_crowd_close"
            android:visibility="gone"
            android:layout_toRightOf="@id/activity_yuan_xin_crowd_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/enterprise_market_icon_closepage_white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/activity_yuan_xin_crowd_middle_text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            android:text="商圈"
            android:textColor="@color/white"/>

