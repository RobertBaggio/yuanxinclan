<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:background="@color/gray_b7"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/activity_news_chaimage"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:id="@+id/saa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/activity_news_chaimage"
        >
    <TextView
        android:id="@+id/activity_news_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="name"
        android:gravity="center_vertical"
        android:textSize="13dp"
        android:layout_marginLeft="11dp"
        android:textColor="@color/login_black"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ttd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/saa">
        <TextView
            android:id="@+id/activity_news_content"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="name"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:layout_marginLeft="11dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/activity_publish_compangy_info_grey"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/lla"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_below="@+id/ttd">
    <TextView
        android:id="@+id/activity_n"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Â¥"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_marginLeft="11dp"
        android:textColor="@color/red3"
        />
    <TextView
        android:id="@+id/activity_nprice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/red3"
        android:gravity="center_vertical"
        android:text="2345"
        android:layout_marginLeft="3dp"
        android:layout_alignBottom="@+id/activity_n"
        android:layout_toRightOf="@+id/activity_n"
        android:layout_toEndOf="@+id/activity_n"
        android:layout_alignTop="@+id/activity_n"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_b7"
        android:layout_below="@+id/lla"/>
</RelativeLayout>
