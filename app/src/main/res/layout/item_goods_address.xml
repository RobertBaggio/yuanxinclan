<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_goods_address_all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_grey_no">
        <FrameLayout
            android:layout_width="41dp"
            android:layout_height="60dp">

        <ImageView
            android:id="@+id/item_goods_address_image"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:src="@drawable/personal_myaddress_default"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_position"
            android:layout_below="@+id/item_goods_address_image"
            android:layout_toRightOf="@+id/item_goods_address_image"
            android:layout_toEndOf="@+id/item_goods_address_image"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="7dp"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/item_goods_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/common_register_black"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/item_goods_address_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_toLeftOf="@+id/item_goods_address_name_edit"
                    android:layout_toRightOf="@+id/item_goods_address_name"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/common_register_black"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/item_goods_address_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="25dp"
                    android:text="编辑"
                    android:textColor="@color/common_register_black"
                    android:textSize="13sp"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/item_goods_address_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/item_goods_address_namet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手    机："
                    android:textColor="@color/common_register_black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/item_goods_address_phone_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/common_register_black"
                    android:textSize="16sp"
                    />


            </LinearLayout>
            <!--android:gravity="center"-->
            <LinearLayout
                android:id="@+id/item_goods_address_layout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                >

                <TextView
                    android:id="@+id/item_goods_address_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地    址："
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/item_goods_address_address_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/white"/>

</LinearLayout>
