<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_item_fragment_my_order_all_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/by"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:id="@+id/item_item_fragment_my_order_all_goods_layout"
            android:layout_toRightOf="@+id/item_item_fragment_my_order_all_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/item_item_fragment_my_order_all_money_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/buy_black"
                        android:text="¥"/>

                    <TextView
                        android:id="@+id/item_item_fragment_my_order_all_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/buy_black"
                        android:layout_marginLeft="3dp"
                        android:textSize="14dp"
                        android:text="255"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/item_item_fragment_my_order_all_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简约办公桌"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/item_item_fragment_my_order_all_money_layout"/>

                <TextView
                    android:id="@+id/item_item_fragment_my_order_all_number"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="x1"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_item_fragment_my_order_all_choose_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格：120*200"/>

                <TextView
                    android:id="@+id/item_item_fragment_my_order_all_choose_two"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色：浅白"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/think_tank_detail_bg"/>

</LinearLayout>
