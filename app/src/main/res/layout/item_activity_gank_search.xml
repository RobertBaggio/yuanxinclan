<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="5dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/list_img"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/item_activity_gank_search_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们都是好朋友,我们都是好朋友我们都是好朋友我们都是好朋友我们都是好朋友我们都是好朋友我们都是好朋友"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/item_activity_gank_search_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:textColor="@color/text_color_red"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_activity_gank_search_who"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暗血"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/item_activity_gank_search_createdAt"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年12月"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
