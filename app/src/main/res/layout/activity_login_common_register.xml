<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/commom_register_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:background="@color/login_red"
        android:weightSum="5"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/window_head_left_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="1dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/window_head_left_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ease_mm_title_back"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:text="普通注册"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15.5dp"/>

        <TextView
            android:id="@+id/activity_login_common_register_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="登录"
            android:gravity="center"
            android:textSize="15dp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_weight="0.8"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:orientation="vertical"
        android:background="@drawable/border_grey">

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="手         机"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/activity_login_common_register_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"
                android:hint="请输入11位手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:digits="0123456789"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="手机认证"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/activity_login_common_register_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/common_register_black"
                android:inputType="number"
                android:hint="请输入验证码"
                />

            <TextView
                android:id="@+id/activity_login_common_register_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/blue"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:textSize="16sp"

                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:textSize="16sp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:textColor="@color/common_register_black"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"/>

            <EditText
                android:inputType="textVisiblePassword"
                android:digits="@string/pwd_limit"
                android:textSize="16sp"
                android:id="@+id/activity_login_common_register_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:hint="6-8位数字和英文"
                android:maxLength="8"
                android:textColor="@color/common_register_black"
                />

            <ImageView
                android:id="@+id/kejianimage"
                android:layout_width="25dp"
                android:layout_height="18dp"
                android:paddingRight="2dp"
                android:src="@drawable/see_show"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:id="@+id/activity_login_common_register_register"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/login_red_2_0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_black"
            android:textSize="13dp"
            android:text="注册代表您已阅读并同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/businesstop"
            android:textSize="13dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginRight="13dp"
        android:paddingBottom="15dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/activity_login_common_register_login2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号，去登录"
            android:textSize="12sp"
            android:textColor="@color/common_register_grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_grey"/>
    </LinearLayout>

</LinearLayout>
