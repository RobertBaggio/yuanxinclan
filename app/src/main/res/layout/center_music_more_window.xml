<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#f0FFFFFF"
    android:gravity="bottom|center_horizontal" >

    <LinearLayout
        android:id="@+id/publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/pulish_gongying"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_gy"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/publish_gy" />

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_gongying"
                android:textColor="#939395"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pulish_xuqiu"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_xq"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/publish_xq" />

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_xuqiu"
                android:textColor="#939395"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pulish_huodong"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_hd"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/publish_hd" />

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_huodong"
                android:textColor="#939395"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pulish_dongtai"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_dt"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/publish_dt" />

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_dongtai"
                android:textColor="#939395"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <!--<ImageView-->
        <!--android:id="@+id/center_music_window_close"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/more_window_auto"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="78dip"-->
        <!--android:layout_toRightOf="@+id/more_window_collect"-->
        <!--android:src="@drawable/tabbar_compose_background_icon_close" />-->

    <RelativeLayout
        android:id="@+id/close_layout"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true"
            android:src="@drawable/index_publish_bg" />

        <ImageView
            android:id="@+id/center_music_window_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/index_publish_plus" />
    </RelativeLayout>

</RelativeLayout>