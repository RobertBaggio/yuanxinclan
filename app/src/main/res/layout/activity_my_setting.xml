<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_fa">

    <include
        layout="@layout/window_head"
        android:id="@+id/window_head_layout"
        />
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_check_update"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_alignParentLeft="true"
        >

        <TextView
            android:id="@+id/rl_check_updatete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="检测更新"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rl_check_update"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="12dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/activity_my_setting_account_safe"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@+id/window_head_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账号安全"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_my_setting_account_line_one"
        android:layout_below="@+id/activity_my_setting_account_safe"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/line"/>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/activity_my_setting_about_us"
        android:layout_below="@+id/activity_my_setting_account_line_one"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_my_setting_account_line_two"
        android:layout_below="@+id/activity_my_setting_about_us"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/line"/>

    <RelativeLayout
        android:background="@color/white"

        android:id="@+id/activity_my_setting_networking_protocol"
        android:layout_below="@+id/activity_my_setting_account_line_two"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="网络协议"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_my_setting_account_line_three"
        android:layout_below="@+id/activity_my_setting_networking_protocol"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/line"/>

    <RelativeLayout
        android:background="@color/white"

        android:id="@+id/activity_my_setting_complaint_advice"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@+id/activity_my_setting_account_line_three"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="投诉建议"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_my_setting_account_line_four"
        android:layout_below="@+id/activity_my_setting_complaint_advice"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/line"/>

    <RelativeLayout
        android:background="@color/white"

        android:id="@+id/activity_my_setting_clear_cache"
        android:layout_below="@+id/activity_my_setting_account_line_four"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/activity_my_setting_clear_cache_text"
            android:text="清理缓存"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/activity_my_setting_clear_cache_how_much"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0M"
            android:layout_centerVertical="true"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/activity_my_setting_quit"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:text="退出登录"
        android:gravity="center"
        android:textColor="@color/activity_publish_compangy_info_grey"
        android:textSize="16sp"/>


</RelativeLayout>
