<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_fa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/businesstop">

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/activity_change_password_left_layout">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ease_mm_title_back"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/activity_change_password_right_layout"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center_vertical|end"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现用手机"
            android:textSize="16sp"
            android:textColor="@color/activity_publish_compangy_info_grey"/>


        <EditText
            android:layout_marginLeft="16dp"
            android:id="@+id/activity_change_password_phone_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/login_black"
            android:inputType="number"
            android:maxLength="11"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            />

        <TextView
            android:layout_marginRight="31dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>

        <TextView
            android:id="@+id/activity_exchange_phone_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/blue"
            android:paddingRight="22dp"
            android:textSize="14sp"

            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white"/>

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机认证"
            android:textSize="16sp"
            android:textColor="@color/activity_publish_compangy_info_grey"/>


        <EditText
            android:layout_marginLeft="16dp"
            android:id="@+id/activity_change_password_code_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="14sp"
            android:inputType="number"
            android:textColor="@color/login_black"
            android:hint="请输入验证码"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white"/>

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textSize="16sp"
            android:textColor="@color/activity_publish_compangy_info_grey"/>


        <EditText
            android:layout_marginLeft="16dp"
            android:id="@+id/activity_change_password_password_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:inputType="textVisiblePassword"
            android:textSize="14sp"
            android:digits="@string/pwd_limit"
            android:textColor="@color/login_black"
            android:hint="请输入密码"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white"/>

    <Button
        android:id="@+id/activity_change_password_button"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:background="@color/businesstop"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

</LinearLayout>
