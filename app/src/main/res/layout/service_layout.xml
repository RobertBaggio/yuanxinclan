<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:melove="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_present_custom_made_layout_one"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <com.yuanxin.clan.core.util.MLImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chat_icon_service"
            android:scaleType="centerCrop"
            melove:radius="5dp"
            melove:shape_type="rectangle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="圆心服务"
                    android:textColor="@color/login_black"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="08.50"
                    android:textColor="@color/activity_company_info_grey"
                    android:visibility="gone"
                    android:textSize="11sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="如需提供帮助，请点这里"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_present_custom_made_layout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <com.yuanxin.clan.core.util.MLImageView
                android:id="@+id/item_present_custom_made_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:background="@drawable/chat_news_notice"
                android:scaleType="centerCrop"
                melove:radius="5dp"
                melove:shape_type="rectangle"/>

            <TextView
                android:id="@+id/tvChatNum"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_above="@+id/item_present_custom_made_image"
                android:layout_marginBottom="-8dp"
                android:layout_marginLeft="-8dp"
                android:layout_toRightOf="@+id/item_present_custom_made_image"
                android:background="@drawable/red_point_drawable"
                android:contentDescription="@null"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView

                    android:id="@+id/item_present_custom_made_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="消息中心"
                    android:textColor="@color/login_black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/item_present_custom_made_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="08.50"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="11sp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_present_custom_made_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="你有0条审核信息需要处理"
                    android:textColor="@color/activity_company_info_grey"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/item_present_custom_made_layout"
        android:background="@color/huan_xin_grey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/item_present_custom_made_layout"
        android:background="@color/huan_xin_grey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>

</LinearLayout>
