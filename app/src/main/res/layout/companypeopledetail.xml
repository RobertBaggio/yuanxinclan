                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/quntouxre"
                android:layout_marginLeft="5dp"
                android:background="@color/gray_white"/>

            <RelativeLayout
                android:id="@+id/shangqualorere"
