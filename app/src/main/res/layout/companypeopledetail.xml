                <TextView
                    android:id="@+id/activity_my_info_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/activity_five_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/imgUserSex"
