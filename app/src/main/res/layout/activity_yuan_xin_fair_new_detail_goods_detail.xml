<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/by"/>

            <RelativeLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_title_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_title_left_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/black_back"
                        />
                </LinearLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="商品详情"
                    android:textColor="@color/login_black"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_right_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|end"
                    android:paddingRight="12dp">

                    <ImageView
                        android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_right_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/news_collecte_nomal"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_image"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/fair_bg_red"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/fair_bg_red"
                    android:textSize="24sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_price_layout"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/fair_goods_name"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_name"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/fair_goods_introduce_text"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_one"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_text"
                android:background="@color/activity_company_info_line"/>


            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_choice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_one"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="20dp"
                android:text="参数选择"
                android:textColor="@color/common_register_black"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_choice_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_choice_text"
                android:background="@drawable/border_on_line"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="9dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|left"
                        android:orientation="vertical"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="规格选择"
                            android:textColor="@color/fair_goods_introduce_text"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="(单位：cm)"
                            android:textColor="@color/fair_goods_introduce_text"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/flySize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:max_select="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="颜色选择"
                        android:textColor="@color/fair_goods_introduce_text"
                        android:textSize="15sp"/>

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/flyColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:max_select="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="购买数量"
                        android:textColor="@color/fair_goods_introduce_text"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnDecrease"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/mark_btn_subtract_nomal"
                            />


                        <TextView
                            android:id="@+id/etAmount"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/mark_btn_box_nomal"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"/>


                        <ImageView
                            android:id="@+id/btnIncrease"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/mark_btn_add_nomal"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:text="库存：0"
                        android:textColor="@color/fair_goods_introduce_text"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_one_text_one"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_choice_layout"
                android:background="@color/activity_company_info_line"/>

            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_one_text_one"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="20dp"
                android:text="商品参数"
                android:textColor="@color/common_register_black"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_compnay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_one"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="公司名称"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_compnay_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_compnay"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="货号"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_cai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_code"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="材质"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_cai"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="风格"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_style_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_style"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="尺寸"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_size"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="克重"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_weight"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="颜色"/>

                <TextView
                    android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_one_text"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text_color"
                android:background="@color/activity_company_info_line"/>

            <TextView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_introduce_one_text"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="20dp"
                android:text="图文详情"
                android:textColor="@color/common_register_black"
                android:textSize="15sp"/>

            <com.yuanxin.clan.mvp.view.X5WebView
                android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_yuan_xin_fair_new_detail_goods_detail_goods_picture_text"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:fadeScrollbars="true"
                android:scrollbarStyle="insideOverlay"
                app:defaultProgress="false"/>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lyMenuMarket"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/border_red_new"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_cart"
            android:layout_width="78dp"
            android:layout_height="44dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/market_shop"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_talk"
            android:layout_width="78dp"
            android:layout_height="44dp"
            android:background="@drawable/border_red_new"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/market_chat"/>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_buy"

            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/fair_orange"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_put_shop_cart"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/fair_bg_red"
            android:gravity="center"
            android:text="立即购物"
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyMenuGift"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_buy_gift"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:background="@drawable/gift_chat"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/activity_yuan_xin_fair_new_detail_goods_detail_put_shop_cart_gift"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:background="#F05E4B"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </LinearLayout>
</RelativeLayout>
