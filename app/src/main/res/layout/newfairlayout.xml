<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/item_yuan_xin_fair_"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray_b7"
        android:layout_alignParentTop="true"
        />
    <ImageView
        android:id="@+id/item_yuan_xin_fair_new_image"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        android:src="@drawable/by"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_b7"
        android:orientation="horizontal"
        android:weightSum="7"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_yuan_xin_fair_new_namere1"
                    android:minWidth="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@drawable/white_corners"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="毛巾"
                    android:textColor="@color/login_black"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/item_yuan_xin_fair_new_namere2"
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:background="@drawable/white_corners"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="毛巾"
                    android:visibility="gone"
                    android:textColor="@color/login_black"
                    android:layout_marginLeft="12dp"
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/item_yuan_xin_fair_new_namere3"
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:background="@drawable/white_corners"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="毛巾"
                    android:visibility="gone"
                    android:textColor="@color/login_black"
                    android:layout_marginLeft="12dp"
                    android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_yuan_xin_fair_new_namere4"
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:background="@drawable/white_corners"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="毛巾"
                    android:visibility="gone"
                    android:textColor="@color/login_black"
                    android:textSize="10dp"
                    />
                <TextView
                    android:id="@+id/item_yuan_xin_fair_new_namere5"
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:background="@drawable/white_corners"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="毛巾"
                    android:textColor="@color/login_black"
                    android:layout_marginLeft="12dp"
                    android:visibility="gone"
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/item_yuan_xin_fair_new_namere6"
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:background="@drawable/white_corners"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="毛巾"
                    android:textColor="@color/login_black"
                    android:layout_marginLeft="12dp"
                    android:visibility="gone"
                    android:textSize="10dp"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="4">
            <ImageView
                android:id="@+id/item_yuan_xin_fair_new_namerei1"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/item_yuan_xin_fair_new_namerei2"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/item_yuan_xin_fair_new_namerei3"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/item_yuan_xin_fair_new_namerei4"
                android:layout_width="46dp"
                android:layout_height="38dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop"/>


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_below="@+id/item_yxin_fair_"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"
        android:id="@+id/textView7"/>


</LinearLayout>
    </RelativeLayout>
