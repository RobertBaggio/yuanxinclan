<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_fa">

    <include
        layout="@layout/window_head"
        android:id="@+id/window_head_layout"/>

    <RelativeLayout
        android:id="@+id/activity_account_safe_bound_phone"
        android:layout_below="@+id/window_head_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="换绑手机"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_account_safe_line_one"
        android:layout_below="@+id/activity_my_setting_account_safe"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white"/>

    <RelativeLayout
        android:visibility="gone"
        android:layout_below="@+id/activity_account_safe_line_one"
        android:id="@+id/activity_account_safe_bound_account_bound"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="社交账号绑定"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/activity_account_safe_line_two"
        android:layout_below="@+id/activity_account_safe_bound_account_bound"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white"/>

    <RelativeLayout
        android:layout_below="@+id/activity_account_safe_line_two"
        android:id="@+id/activity_account_safe_bound_setting_password"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置密码"
            android:textColor="@color/activity_publish_compangy_info_grey"
            android:textSize="16sp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_center_icon_enter_black"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/activity_account_safe_bound_setting_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white"/>

</LinearLayout>
