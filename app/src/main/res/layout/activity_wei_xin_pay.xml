<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wei_xin_pay_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/weixin_logo"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/wei_xin_pay_layout"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/wei_xin_pay_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:drawableLeft="@drawable/weixin_recommend"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亿万用户的选择，更快更安全"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/activity_wei_xin_pay_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_orange_grey"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</LinearLayout>
