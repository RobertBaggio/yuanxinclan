<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:melove="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <RelativeLayout
        android:paddingTop="10dp"
        android:id="@+id/item_company_member_layout"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/item_information_choose_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/enterprise_search_nav_icon_btn_cancle"/>

        <com.yuanxin.clan.core.util.MLImageView
            android:layout_below="@+id/item_information_choose_image"
            android:layout_centerHorizontal="true"
            android:layout_width="38dp"
            android:layout_height="38dp"
            melove:shape_type="round"
            android:src="@drawable/by"
            android:id="@+id/item_company_member_head_image"
            />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_company_member_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_company_member_name"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="林晓"
                android:textSize="12sp"
                android:textColor="@color/login_black"/>

            <TextView
                android:id="@+id/item_company_member_position"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEO"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/login_black"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

